apiVersion: 1

datasources:
  - name: ClickHouse
    uid: clickhouse-datasource  # Фиксированный UID для всех окружений
    type: grafana-clickhouse-datasource
    access: proxy
    url: http://clickhouse:8123
    jsonData:
      host: clickhouse
      port: 8123
      protocol: http
      defaultDatabase: $CLICKHOUSE_DB
      username: $CLICKHOUSE_USER
    secureJsonData:
      password: $CLICKHOUSE_PASSWORD
    isDefault: true
    editable: true
